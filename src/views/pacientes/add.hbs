<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">
                        Crear nuevo paciente
                    </h3>
                </div>
                    <div class="card-body">
                        <form action="/add" method="post">
                        <div class="input-group mt-2">
                            <label for="NombrePaciente" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="NombrePaciente" id="NombrePaciente" placeholder="Ejemplo: Carlos Perez" autofocus required>
                        </div><div class="input-group mt-2">
                            <label for="DocumentoPaciente" class="input-group-text">Documento</label>
                            <input class="form-control" type="number" name="DocumentoPaciente" id="DocumentoPaciente" placeholder="Ejemplo: 17777777" required>
                        </div><div class="input-group mt-2">
                            <label for="IdPacientes" class="input-group-text">Id paciente</label>
                            <input class="form-control" type="number" name="idPacientes" id="idPacientes" placeholder="Ejemplo: 1"  required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">
                                Crear
                            </button>
                        </div>




                        </form>
                    </div>


            </div>
        </div>
    </div>
</div>card-header
