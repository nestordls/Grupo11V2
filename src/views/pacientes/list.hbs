<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de pacientes</h3>
        {{#if pacientes}}
            
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                    <th scope="col" class="col-4">Nombre</th>
                    <th scope="col">Documento</th>
                    <th scope="col">Id paciente</th>
                    <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                 {{#each pacientes}}
                    <tr>
                        <td>{{NombrePaciente}}</td>
                        <td>{{DocumentoPaciente}}</td>
                        <td>{{idPacientes}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/edit/{{idPacientes}}" class="btn btn-warning p-2"><i class="fa-solid fa-pencil"></i></a>
                                
                                <a href="/delete/{{idPacientes}}" class="btn btn-danger p-2"><i class="fa-solid fa-trash"></i></a>
                                
                            </div>
                        </td>
                    </tr>
                 {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="4">REGISTRO DE PACIENTES</td>
                    </tr>
                </tfoot>
            </table>
        </div>


        
        {{else}}
            <div class=".card.text-center mx-auto" style="width:350px;">
                <div class="card-header">
                    <h3>Crear un paciente</h3>
                </div>
                <div class="card-body">
                     <p>Presione el bot√≥n para registrar un nuevo paciente</p>
                     <a href="#" class="btn btn.primary">Ir a crear</a>
                </div>            

        {{/if}}
    </div>
</div> 